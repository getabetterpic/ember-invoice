{{#if this}}
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Invoice Date</td>
        <td>Invoice Amount</td>
      </tr>
    </thead>
    <tbody>
      {{#each invoice in controller}}
      {{#link-to 'invoice' invoice tagName='tr'}}
        <td>{{invoice.invoiceDate}}</td>
        <td>{{invoice.invoiceAmount}}</td>
      {{/link-to}}
      {{/each}}
    </tbody>
  </table>
{{/if}}