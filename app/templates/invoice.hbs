<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      Invoice # {{id}}
        <small>{{#link-to 'invoices.new' class="btn btn-link"}}New{{/link-to}}</small>
        <small><a class="btn btn-link">Preview</a></small>
        <small><a class="btn btn-link">Send</a></small>
        <small><a class="btn btn-link">Print</a></small>
        <small><a class="btn btn-link">Erase</a></small>
    </div>
  </div>
  <div class="panel-body">
    <form class="form-horizontal" role="form">
      <div class="form-group">
        <label for="invoiceDate" class="col-sm-2 control-label">Invoice Date</label>
        <div class="col-sm-6">
          {{input value=invoiceDate class="form-control" id="invoiceDate"}}
        </div>
      </div>
      <div class="form-group">
        <label for="description" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-6">
          {{input value=description class="form-control" id="description"}}
        </div>
      </div>
      <div class="form-group">
        <label for="notes" class="col-sm-2 control-label">Notes</label>
        <div class="col-sm-6">
          {{textarea value=notes class="form-control" id="notes"}}
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" {{action "saveInvoice" this}} class="btn btn-primary col-sm-7">Save</button>
        </div>
      </div>
    </form>
  </div>
    <table class="table table-bordered panel-body">
      <thead>
        <tr>
          <td>Description</td>
          <td class="text-right">Units</td>
          <td class="text-right">Unit Price</td>
          <td class="text-right">Line Total</td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        {{#each invoiceLines}}
          <tr>
            {{partial "invoice/line"}}
          </tr>
        {{/each}}
        {{line-new invoice=this tagName="tr"}}
      </tbody>
    </table>
    <div class="panel-footer text-right">
      Total: {{invoiceAmount}}
    </div>
  </div>
</div>